{
  "name": "vinoflare-app",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && vite build --mode client && vite build",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "gen:routes": "tsr generate",
    "gen:types": "wrangler types --env-interface CloudflareBindings",
    "gen:api": "bun scripts/generate-openapi.ts && bun orval --config orval.config.ts",
    "gen:module": "bun scripts/generate-module/index.ts",
    "lint": "biome lint --write .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "env:push:cf": "wrangler secret bulk .prod.vars",
    "env:push:gh": "bun scripts/push-gihub-env.ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@cloudflare/vite-plugin": "^1.7.5",
    "@cloudflare/vitest-pool-workers": "^0.8.46",
    "@cloudflare/workers-types": "^4.20250620.0",
    "@hono/node-server": "^1.14.4",
    "@tailwindcss/postcss": "^4.1.10",
    "@tanstack/router-cli": "^1.121.34",
    "@tanstack/router-plugin": "^1.121.34",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "better-sqlite3": "^12.1.1",
    "dotenv": "^16.5.0",
    "orval": "^7.10.0",
    "postcss": "^8.5.6",
    "typescript": "^5.8.3",
    "vite": "6.3.5",
    "vitest": "^3.2.4",
    "wrangler": "^4.21.2"
  },
  "dependencies": {
    "@scalar/hono-api-reference": "^0.9.7",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-query": "^5.81.2",
    "@tanstack/react-router": "^1.121.34",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "hono": "^4.7.3",
    "http-status-codes": "^2.3.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.2"
  }
}