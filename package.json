{
	"name": "vinoflare",
	"type": "module",
	"scripts": {
		"dev": "vite --port 5173",
		"build": "vite build --mode client",
		"build:client": "vite build --mode client",
		"preview": "$npm_execpath run build && vite preview",
		"deploy": "$npm_execpath run build:client && wrangler deploy",
		"cf-typegen": "wrangler types --env-interface Env",
		"apigen": "orval --config ./orval.config.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio:local": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
		"db:studio:remote": "drizzle-kit studio",
		"db:push:local": "wrangler d1 migrations apply DB --local",
		"db:push:remote": "wrangler d1 migrations apply DB --remote",
		"env:sync:local": "bun scripts/sync-dev-vars.ts",
		"env:sync:remote": "wrangler secret bulk .prod.vars",
		"find:deadcode": "ts-prune",
		"typecheck": "tsc --noEmit",
		"check:write": "biome check --write .",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.3.4",
		"@hono/zod-openapi": "^0.19.8",
		"@hono/zod-validator": "^0.6.0",
		"@radix-ui/react-scroll-area": "^1.2.9",
		"@radix-ui/react-slot": "^1.2.3",
		"@scalar/hono-api-reference": "^0.9.1",
		"@tanstack/react-query": "^5.77.2",
		"@tanstack/react-router": "^1.120.11",
		"@trpc/client": "^11.1.4",
		"@trpc/react-query": "^11.1.4",
		"@trpc/server": "^11.1.4",
		"better-auth": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.44.0",
		"drizzle-zod": "^0.8.2",
		"hono": "^4.7.10",
		"lucide-react": "^0.511.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-dropzone": "^14.3.8",
		"sonner": "^2.0.3",
		"stoker": "^1.4.2",
		"tailwind-merge": "^3.3.0",
		"zod": "^3.25.32"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.3.0",
		"@cloudflare/vitest-pool-workers": "^0.8.34",
		"@tailwindcss/vite": "^4.1.8",
		"@tanstack/form-core": "^1.12.0",
		"@tanstack/react-form": "^1.12.0",
		"@tanstack/react-query-devtools": "^5.77.2",
		"@tanstack/react-router-devtools": "^1.120.11",
		"@tanstack/router-plugin": "^1.120.11",
		"@tanstack/zod-form-adapter": "^0.42.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/bun": "^1.2.14",
		"@types/node": "^22.15.27",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"better-sqlite3": "^11.10.0",
		"cloudflare": "^4.3.0",
		"drizzle-kit": "^0.31.1",
		"orval": "^7.9.0",
		"tailwindcss": "^4.1.8",
		"ts-prune": "^0.10.3",
		"tw-animate-css": "^1.3.2",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-ssr-components": "^0.1.0",
		"vitest": "^3.2.0",
		"wrangler": "^4.17.0"
	}
}
