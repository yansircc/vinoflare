{
	"name": "create-vinoflare",
	"version": "0.1.0",
	"description": "Create modern full-stack apps with Vinoflare (Hono + Vite + Cloudflare)",
	"type": "module",
	"bin": {
		"create-vinoflare": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsx src/index.ts",
		"build": "tsup",
		"prepublishOnly": "bun run build",
		"test": "vitest",
		"test:e2e": "tsx scripts/test-all.ts",
		"test:parallel": "tsx scripts/test-all-parallel.ts",
		"typecheck": "tsc --noEmit",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"pack:test": "npm pack && npm install -g vinoflare-*.tgz"
	},
	"dependencies": {
		"@clack/prompts": "^0.8.2",
		"commander": "^12.1.0",
		"fs-extra": "^11.2.0",
		"kleur": "^4.1.5",
		"simple-git": "^3.28.0",
		"which-pm-runs": "^1.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.10.6",
		"@types/which-pm-runs": "^1.0.2",
		"tsup": "^8.3.5",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=18"
	},
	"keywords": [
		"create",
		"vinoflare",
		"hono",
		"cloudflare",
		"vite",
		"full-stack",
		"typescript",
		"react",
		"tanstack-router"
	],
	"author": "yansir",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/yansircc/create-vinoflare.git"
	},
	"homepage": "https://github.com/yansircc/create-vinoflare#readme"
}
